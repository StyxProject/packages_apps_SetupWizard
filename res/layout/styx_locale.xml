<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        style="@style/PageHeaderIcon"
        android:src="@drawable/ic_styx_locale" />

    <TextView
        style="@style/PageTitle"
        tools:text="@string/setup_locale" />

    <org.lineageos.setupwizard.widget.LocalePicker
        android:id="@+id/locale_list"
        style="@style/LocaleWidget.Material.LocalePicker"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="NewApi" />

    <TextView
        android:id="@+id/next"
        style="@style/StyxNext"
        android:layout_gravity="end"
        android:text="@string/next" />
</LinearLayout>